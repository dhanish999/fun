<!DOCTYPE html>
<html>
<head>
    <title>Security Alert</title>
    <style>
        body {
            background-color: black;
            color: red;
            text-align: center;
            font-family: Arial, sans-serif;
            font-size: 24px;
            overflow: hidden;
        }
        #alert {
            margin-top: 20%;
        }
    </style>
    <script>
        function startPrank() {
            // Flashing background
            setInterval(() => {
                document.body.style.backgroundColor = (document.body.style.backgroundColor === 'black') ? 'red' : 'black';
            }, 200);

            // Play scary sound
            let audio = new Audio("https://www.myinstants.com/media/sounds/windows-error.mp3");
            audio.loop = true;
            audio.play();

            // Vibrate phone (mobile only)
            if (navigator.vibrate) {
                setInterval(() => { navigator.vibrate(500); }, 2000);
            }

            // Fake shutdown effect
            setTimeout(() => {
                document.body.innerHTML = "<h1>📴 Shutting down...</h1><p>Goodbye! 💀</p>";
                setTimeout(() => { document.body.innerHTML = ""; }, 3000);
            }, 7000);
        }

        setTimeout(() => {
            alert("⚠️ Your phone is hacked!");
            document.body.innerHTML = "<h1>📱 Your phone is hacked! 📱</h1><p>Just kidding! 😂</p>";
            startPrank();
        }, 3000);
    </script>
</head>
<body>
    <div id="alert">
        <h1>🔴 Verifying Security...</h1>
    </div>
</body>
</html>
